{
	"name": "vscode-live2d",
	"displayName": "vscode-live2d",
	"description": "vscode看板娘",
	"version": "1.0.0",
	"publisher": "CharlesZ",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CharlesZhang6/vscode-live2d.git"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"icon": "res/logo.png",
	"keywords": [
		"vscode看板娘",
		"看板娘",
		"live2d",
		"canvas"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-live2d.helloWorld",
				"title": "Hello Live2D"
			}
		],
		"configuration": [
			{
				"title": "看板娘配置",
				"type": "Object",
				"properties": {
					"vscode-live2d.enabled": {
						"type": "boolean",
						"default": true,
						"description": "是否启用看板娘"
					},
					"vscode-live2d.model": {
						"type": "string",
						"enum": [
							"shizuku",
							"shizuku-pajama",
							"bilibili-22",
							"bilibili-33"
						],
						"default": "shizuku",
						"description": "选哪个娘"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"vscode:uninstall": "node ./out/uninstall",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
